{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Fortran app (debug, no args)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/app",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build:debug",
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "Run Fortran app (debug, with args 7 8)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/app",
      "args": ["7", "8"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build:debug",
      "externalConsole": false,
      "MIMode": "lldb"
    }
  ]
}
